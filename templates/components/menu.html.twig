<div class="vh-100">

	{% set menu = { main : [
						{
							title : "Activity & Projects ",roles:["ROLE_USER"], submenu : [
									{ title: "Dashboard", icon:"fa-solid fa-table-columns", path: path("dashboard"), roles:["ROLE_USER"],tab:"dashboard"},
									]
						},{
							title : "Account ",roles:["ROLE_USER"], submenu : [
									{ title: "Logout", icon:"fa-solid fa-arrow-right-from-bracket", path: path("app_logout"), roles:["ROLE_USER"],tab:"logout"}
									]
						}
				 	]
				}						
	%}
	<div class="flex flex-col items-center w-40 h-full overflow-hidden largeComponent ">
		<a class="flex items-center w-full px-3 mt-3" href="#" id="toggleButton">

			<span class="ml-2 h4  font-bold">Manager</span>
		</a>
		{% for category in menu.main %}
			<div class="w-full px-2">

				{% for submenu in category.submenu %}
					<div class="flex flex-col items-center w-full mt-2 border-t">
						{% if app.user.roles|length and submenu.roles|length and app.user.roles|array_intersect(submenu.roles)|length %}


							<a class="relative flex items-center w-full h-12 px-3 mt-2 rounded hover:text-gray-300" href="{{submenu.path}}">

								<span class="ml-2 text-sm ">{{submenu.title}}</span>
							</a>
						{% endif %}
					</div>
				{% endfor %}


			</div>
		{% endfor %}

		<a class="flex items-center justify-center w-full h-16 mt-auto " href="#">

			<span class="ml-2 text-sm font-medium">{{app.user.username}}</span>
		</a>
	</div>
</div>
